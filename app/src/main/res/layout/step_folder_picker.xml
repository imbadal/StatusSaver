<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baseline_folder_24"
        android:contentDescription="Folder Picker"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/stepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick .Statuses Folder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/stepDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We need access to your WhatsApp .Statuses folder to save your statuses. Please pick the folder."
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/instruction_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to find the .Statuses folder:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Navigate to: Android/media/com.whatsapp/WhatsApp/Media/\n2. Look for the .Statuses folder (it's hidden)\n3. Select the .Statuses folder\n\nIf you can't see it:\n• Make sure you have viewed at least one status in WhatsApp\n• Enable 'Show hidden files' in your file manager"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the same method used by other status saver apps."
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:alpha="0.8" />

    <Button
        android:id="@+id/pickFolderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick .Statuses Folder"
        android:layout_marginTop="24dp" />

</LinearLayout> 